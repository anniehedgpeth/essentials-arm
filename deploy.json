{
   "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": { 
     "adminUserName": {
       "type": "string",
       "defaultValue": "chefessentials",
       "metadata": {
         "description": "Name used to log into the node."
       }
     },
     "adminPassword": {
       "type": "secureString",
       "metadata": {
         "description": "This is the password for logging into the node"
       }
     },
     "count": {
         "type": "int",
         "metadata": {
             "description": "the number of machines to makes"
         }
     }
   },
   "variables": { 
     "storageAccountName": "[concat('chfe', uniqueString(resourceGroup().id))]",
     "storageAccountName2": "[concat('chfe2', uniqueString(resourceGroup().id))]",
     "vmName": "azuredev-vm",
     "networkInterfaceName": "azuredev-netint",
     "publicIpName": "azuredev-ip"
    },
   "resources": [ 
        {
            "comments": "Storage Account for AzureDev",
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "kind": "Storage",
            "name": "[concat(variables('storageAccountName'), copyIndex())]",
            "copy": { 
                "name": "storageAccountNameCopy", 
                "count": "[parameters('count')]" 
            },            "apiVersion": "2016-01-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {},
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Storage Account for AzureDev",
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "kind": "Storage",
            "name": "[concat(variables('storageAccountName2'), copyIndex())]",
            "copy": { 
                "name": "storageAccountName2Copy", 
                "count": "[parameters('count')]" 
            },
            "apiVersion": "2016-01-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {},
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Public IP Address for AzureDev",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat(variables('publicIpName'), copyIndex())]",
            "copy": { 
                "name": "publicIpCopy", 
                "count": "[parameters('count')]" 
            },
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Virtual Network for AzureDev",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "azuredev-vnet",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Network Security Group for AzureDev",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "azuredev-nsg",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    },
                                        {
                        "name": "http",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "80",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1010,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "winrm",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "5985",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1020,
                            "direction": "Inbound"
                        }
                    }
                ]
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Network Interface for AzureDev",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(variables('networkInterfaceName'), copyIndex())]",
            "copy": { 
                "name": "networkInterfaceCopy", 
                "count": "[parameters('count')]" 
            },
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "10.0.0.4",
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'azuredev-ip')]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', 'azuredev-vnet'), '/subnets/default')]"
                            }
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'azuredev-nsg')]"
                }
            },
            "resources": [],
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIpName'), copyIndex())]",
                "[resourceId('Microsoft.Network/virtualNetworks', 'azuredev-vnet')]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', 'azuredev-nsg')]"
            ]
        },
        {
            "comments": "Windows Server 2016 for Chef Essentials in Windows",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(variables('vmName'), countIndex())]",
            "copy": { 
                "name": "vmCopy", 
                "count": "[parameters('count')]" 
            },
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS2_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(variables('vmName'), countIndex())]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https', '://', variables('storageAccountName'), '.blob.core.windows.net', concat('/vhds/', variables('vmName'), countIndex(), '20170302170234.vhd'))]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[concat(variables('vmName'), countIndex()]",
                    "adminUsername": "[parameters('adminUserName')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "secrets": [],
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('azuredev-netint', countIndex())]"
                        }
                    ]
                }
            },
            "resources": [],
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', concat(variables('storageAccountName'), countIndex())]",
                "[resourceId('Microsoft.Network/networkInterfaces', concact('azuredev-netint', countIndex())]"
            ]
        },
        {
            "apiVersion": "2015-06-15",
            "type": "extensions",
            "name": "config-app",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('vmName'),copyindex())]",
                "[variables('musicstoresqlName')]"
            ],
            "tags": {
                "displayName": "config-app"
            },
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "http://azurestorageaccount-url/myscript.ps1"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "powershell.exe myscript.ps1",
                    "storageAccountName": "account-with-storage-account-above",
                    "storageAccountKey": "password-for-account-in-params"
                }
            }
        }
    ],
   "outputs": {  }
}
